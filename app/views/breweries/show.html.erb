<% cache @brewery do %>

<h2><%= @brewery.name %>
  <% unless @brewery.active %>
    <span class="label label-info">retired</span>
  <% end %>
</h2>

<p>
  <em>Established in</em>
  <%= @brewery.year %>
</p>

<p>Number of beers <%= @brewery.beers.count %></p>

<ul>
 <% @brewery.beers.each do |beer| %>
  <li><%=link_to beer.name, beer %></li>
 <% end %>
</ul>

<% if @brewery.ratings.empty? %>
  <p>Beers of the brewery have not yet been rated!</p>
<% else %>
  <p>Has <%= pluralize(@brewery.ratings.count, 'rating') %>, average <%= round(@brewery.average_rating)  %>
<% end %>

<% end %> <!- cache end >
<br>

<%= link_to "change activity", toggle_activity_brewery_path(@brewery.id), method: :post, class: "btn btn-primary" %>
<br>
<br>
<%= edit_and_destroy_buttons(@brewery) %>

